<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/memoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start24"
        android:layout_marginTop="@dimen/top30"
        android:fontFamily="@font/nexonlv1gothicregular"
        android:text="오늘의 메모"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/todayMemo"
        android:layout_width="wrap_content"
        android:fontFamily="@font/nexon_normal"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start24"
        android:layout_marginTop="@dimen/top26"
        android:layout_marginEnd="@dimen/end24"
        android:layout_marginBottom="@dimen/bottom77"
        android:backgroundTint="@color/Green"
        android:hint="오늘 운동은 어떠셨나요? (최대 50자)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memoTitle" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom20"
        android:text="취소"
        android:fontFamily="@font/nexon_normal"
        android:background="@drawable/now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todayMemo" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Green"
        android:layout_marginBottom="@dimen/bottom20"
        android:fontFamily="@font/nexonlv1gothicregular"
        android:background="@drawable/now"
        android:text="저장하기"
        android:textFontWeight="700"
        app:layout_constraintEnd_toStartOf="@id/cancel"
        app:layout_constraintTop_toBottomOf="@id/todayMemo" />


</androidx.constraintlayout.widget.ConstraintLayout>