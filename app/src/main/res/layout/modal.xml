<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="272dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/really"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        android:textFontWeight="700"
        android:text="정말 리셋하시겠어요?"/>

    <TextView
        android:id="@+id/resetExpl"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/really"
        android:textSize="14dp"
        android:text="3일 이상 운동을 하지 않으면\n챌린지가 1일로 리셋됩니다!"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/btnReset"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="네, 리셋할게요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetExpl"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/notReset"
        android:text="아뇨, 챌린지를 계속 진행할래요!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnReset"/>






</androidx.constraintlayout.widget.ConstraintLayout>