<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/pstart29"
    android:paddingTop="@dimen/ptop48"
    android:paddingBottom="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height35"
        android:fontFamily="@font/nexonlv1gothicregular"
        android:text="설정"
        android:textColor="#0A0909"
        android:textFontWeight="700"
        android:textSize="@dimen/text26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height20"
        android:fontFamily="@font/nexon_normal"
        android:text="Ver.0.0.1"
        android:textColor="#0A0909" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="1dp"
        android:paddingTop="60px">

        <LinearLayout
            android:id="@+id/whatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:onClick="setButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height60"
                android:layout_marginStart="@dimen/start10"
                android:fontFamily="@font/nexon_normal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:text="플랭크란?"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text16" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:onClick="setButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height60"
                android:layout_marginStart="@dimen/start10"
                android:fontFamily="@font/nexon_normal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:text="알림 설정"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:onClick="setButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height60"
                android:layout_marginStart="@dimen/start10"
                android:fontFamily="@font/nexon_normal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:text="평가 및 리뷰 남기기"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:onClick="setButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/headphone" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/height60"
                android:layout_marginStart="@dimen/start10"
                android:fontFamily="@font/nexon_normal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:text="문의 및 버그 신고"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:onClick="setButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height60"
                android:layout_marginStart="@dimen/start10"
                android:fontFamily="@font/nexon_normal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:text="오픈소스 라이선스"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>